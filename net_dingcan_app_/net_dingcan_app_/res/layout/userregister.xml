<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:background="@drawable/bg"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/new_my_beijing" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:text="用  户  名："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t1"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t1"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="用户密码："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userpasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t2"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t2"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="确认密码："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t3"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t3"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true" />
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Q              Q"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editQQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t4"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t4"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:lines="1"
                android:singleLine="true" />
            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="电       话："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t5"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t5"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:lines="1"
                android:singleLine="true" />
            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="昵       称："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t6"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t6"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:lines="1"
                android:singleLine="true" />
            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/t6"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="地       址："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/t7"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/t7"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:lines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/dianji"
                android:text="注\t\t册"
                android:textColor="@color/baise"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register"
                android:layout_marginBottom="50dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="已有帐号，" />

                <TextView
                    android:id="@+id/userlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="点击此处登录"
                    android:textColor="@color/new_xiaozi" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/userlogin"
                    android:layout_alignRight="@+id/userlogin"
                    android:layout_below="@+id/userlogin"
                    android:background="@color/new_xiaozi" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>